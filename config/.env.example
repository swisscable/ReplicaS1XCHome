APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8080

DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=iptv
DB_USER=iptv
DB_PASS=change_me

SQLITE_PATH=/var/lib/iptv/iptv.sqlite

JWT_SECRET=change_me_to_a_long_random_string
JWT_TTL_SECONDS=3600

CACHE_DRIVER=file
CACHE_PATH=/var/cache/iptv
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

RATE_LIMIT_PER_MINUTE=60

LOG_PATH=/var/log/iptv/app.log
LOG_LEVEL=info

ENABLE_HTTPS_REDIRECT=false

METRICS_ENABLED=false
METRICS_PATH=/metrics

BACKUP_PATH=/var/backups/iptv
