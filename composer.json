{
  "name": "local/iptv-server",
  "description": "Open-source PHP-based IPTV server compatible with Xtream Codes API for Debian 13 headless environments.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "php-di/php-di": "^7.0",
    "monolog/monolog": "^3.0",
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1.3",
    "firebase/php-jwt": "^6.10",
    "robmorgan/phinx": "^0.13.4",
    "psr/log": "^3.0",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.9",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs --standard=.phpcs.xml",
    "stan": "phpstan analyse",
    "migrate": "php bin/migrate.php",
    "serve": "php -S 0.0.0.0:8080 -t public"
  }
}
